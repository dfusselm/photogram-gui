<h1>Photo Details</h1>


<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image %>"></img></dd>

  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>
  
  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>
  
  
  <dt>Edit Photo</dt>
  <dd>
  <form action="/update_photo/<%= @the_photo.id %>" method = "post">
    <label for="image_box">Image</label>
    <input id="image_box" name = "query_image" value = "<%= @the_photo.image %>">
  
    <label for="caption_box">Caption</label>
    <textarea id="caption_box" name = "query_caption" placeholder = "<%= @the_photo.caption %>"><%= @the_photo.caption %></textarea>

    <button>Update photo</button>
</form>

  </dd>

  <dt>Delete Photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this Photo</a></dd>

</dl>

<h2>Comments</h2>

<table>
<tr>
    <th>
      Commenter
    </th>
    <th>
      Comment
    </th>
    <th>
      Posted
    </th>
</tr>

<% @the_photo.comments.each do |a_comment| %>
  <tr>
    <td>
    <%= a_comment.commenter.username %>
    </td>
    <td>
      <%= a_comment.body %>
    </td>
    <td>
      <%= a_comment.created_at %>
    </td>
    
<% end %>


</table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method = "post">
  <label for="photo_id">Photo ID</label>
  <input id="photo_id" name = "query_photo_id" value = "<%= @the_photo.id %>">
  
  <label for="author_id">Author ID</label>
  <input id = "author_id" name = "query_author" placeholder = "Enter your Author ID">

  <label for="comment_id">Comment</label>
  <textarea id="comment_id" name = "query_comment" placeholder = "Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
